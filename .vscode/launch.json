{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Launch All",
            "configurations": [
                "Launch .NET Backend",
                "Launch React"
            ]
        }
    ],
    "configurations": [
        {
            // .NET Core (ASP.NET) launch config
            "name": "Launch .NET Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-backend",
            "program": "${workspaceFolder}/Backend/bin/Debug/net8.0/Backend.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Backend",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            // React launch config using "type": "node"
            "name": "Launch React",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal"
        }
    ]
}